
@model IEnumerable<AirlineTickectBookingMVCProject.Models.PassangerModel>

@{
    ViewBag.Title = "addPassengers";
}

<h2>addPassengers</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PassengersList</h4>
        <hr />
        @foreach (var item in Model)
        {
            <div class="form-group">

                @Html.LabelFor(model => item.Pa_name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => item.Pa_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => item.Pa_name, "", new { @class = "text-danger" })
                </div>
            </div>


        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


